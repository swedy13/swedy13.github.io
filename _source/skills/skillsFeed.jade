article.skills#skills
  .skills-slider
    // Iterate through all skills posts
    |{% for post in site.categories.skills reversed %}
    .card-container
      .card
        .card-flipper
          .card-front
            div(class="card-link {{post.title}}")
              div(class="skills-icon" style="background-image: url(assets/img/posts/thumbnails/{{post.thumbnail}})")
              h3.skills-title {{post.title}}
          div(class="card-back")
            .card-cap
              span
                div(class="skills-icon" style="background-image: url(assets/img/posts/thumbnails/{{post.thumbnail}})")
                h3.card-head {{post.title}}
              hr.card-divider
              .card-description {{post.excerpt}}
              hr.card-divider
    |{% endfor %}