.contact
  z-index 100
  display flex
  align-items center
  position relative
  background-color #e1e1e1

  .contact-title
    font-weight 300
    color gray
    white-space nowrap

  .social-row
    display flex
    align-items center
    justify-content center
    height 100%
    width 100%

    .link
      display flex
      align-items center
      justify-content center
      border-radius 100%
      transition .3s

      .contact-caption
        display none
        // z-index 1
        // position absolute
        // background-color palegoldenrod
        // border 1px solid burlywood

      img
        filter brightness(.4)

      &:hover
        border-color transparent
        box-shadow 1px 1px 1px #aaa

        .contact-caption
          display block

        img
          filter brightness(1) drop-shadow(-1px -1px 0 #777)

        &.upwork
          background-color #6fda44

        &.linkedin
          background-color #0274b3

        &.github
          background-color #333

        &.skype
          background-color #00adef

        &.email
          background-color #d74a38


@media screen and (max-width: 414px)
  .contact
    height 15vw

    .contact-title
      display none

    .social-row
      .link
        margin 0 4vw

        img
          height 12vw
          width 12vw

        &.upwork
          img
            margin-top 1.5vw

        &.linkedin
          img
            height 10vw
            width 10vw

        &.skype
          img
            height 10vw
            width 10vw


@media screen and (min-width: 415px) and (max-width: 1023px)
  .contact
    height 3em

    .contact-title
      display none

    .social-row
      .link
        margin 0 1.5em

        img
          height 2.25em
          width 2.25em

        &.upwork
          img
            margin-top .5em

        &.linkedin
          img
            height 2em
            width 2em

        &.skype
          img
            height 2em
            width 2em


@media screen and (min-width: 1024px)
  .contact
    height 80px

    .contact-title
      display block
      margin-right 30px
      font-size 1.75em

    .social-row
      .link
        height 60px
        width 60px
        margin 0 25px

        // .contact-caption
        //   margin-top 5px
        //   margin-left 15px
        //   padding 2px 6px

        &.upwork
          img
            margin-top 10px

        &.linkedin
          img
            height 60%
            width 60%

        &.skype
          img
            height 60%
            width 60%

        img
          height 45px
          width 45px