.contact
  display flex
  align-items center
  height 80px
  background-color #e1e1e1

  .contact-title
    margin-right 30px
    font-size 1.75em
    font-weight 300
    color gray
    white-space nowrap

  .social-row
    display flex
    align-items center
    justify-content center
    height 100%
    width 100vw

    h2.head
      position absolute
      top 0
      bottom 0
      left 0
      font-size 2em
      font-weight 300
      color #e1e1e1

    .link
      display flex
      align-items center
      justify-content center
      height 60px
      width 60px
      margin 0 25px
      border-radius 100%
      transition .3s

      .contact-caption
        z-index 1
        display none
        position absolute
        margin-top 5px
        margin-left 15px
        padding 2px 6px
        background-color palegoldenrod
        border 1px solid burlywood

      &.upwork
        img
          margin-top 10px

      &.linkedin
        img
          height 60%
          width 60%

      &.skype
        img
          height 60%
          width 60%

      img
        height 45px
        width 45px
        filter brightness(.4)

      &:hover
        border-color transparent
        box-shadow 1px 1px 1px #aaa

        .contact-caption
          display block

        img
          filter brightness(1) drop-shadow(-1px -1px 0 #777)

        &.upwork
          background-color #6fda44

        &.linkedin
          background-color #0274b3

        &.github
          background-color #333

        &.skype
          background-color #00adef

        &.email
          background-color #d74a38