.article-page
  display flex
  justify-content center
  min-height calc(100vh - 80px)
  width 100%
  background-color white

  .article
    width 700px
    margin 60px 0 40px

    header.article-header
      margin-bottom 15px
      
      h1.article-title
        text-align center
        font-size 2.5em
        font-weight 300

    .article-hero
      display block
      justify-content center
      height 300px
      width 100%
      margin 0 0 5px
      background-size cover
      background-position top center
      background-repeat no-repeat
      border-radius 10px

      &.Tools
        background-size contain
        background-position top left
        background-repeat repeat

      &.Process
        background-size contain
        background-position center
        background-repeat repeat        
        
    .article-content
      width 100%

      h2
        width 100%
        background-color #e1e1e1
        margin 50px 0 15px
        padding 10px 0
        border 1px solid #d6d6d6
        border-radius 3px
        text-align center
        font-size 1.5em
        font-weight 400
        color #777

      strong
        font-weight 500
        color black
   
      p
        margin-bottom 20px
        line-height 1.5

      .note
        display flex
        padding 7px
        background-color palegoldenrod
        border 1px solid burlywood
        color #555

      .break
        margin 40px 0 15px
        font-style italic

      a
        color cornflowerblue

      ul,
      ol
        margin 15px
        padding-left 25px
        
        li
          line-height 1.5
          margin-bottom 7px
          color gray

          p
            color black

      table

        &.tools
          width 100%

        &.highlight
          padding 0

          tbody
            tr
              td
                padding 24px 0
                background-color lightgoldenrodyellow

                img
                  margin 0px
                  filter grayscale(1) brightness(.5)

                &:hover
                  img
                    filter grayscale(0) brightness(1) drop-shadow(0 2px 1px #999)
                    transition .3s

        tbody
          tr
            display flex
            justify-content space-around
            margin-bottom 50px

            th
              width 100%
              margin-bottom 10px
              padding 10px 0
              background-color #e1e1e1
              border 1px solid #d6d6d6
              border-radius 3px
              font-size 1.5em
              font-weight 400
              color #555

              &.plain
                margin-bottom 5px
                padding 0
                background-color transparent
                border none
                font-size 1.3em
                text-align left

            td
              display flex
              flex-direction column
              align-items center
              width 33%
              margin-top -50px

              &.description
                width 100%
                line-height 1.5

              &:hover
                img
                  opacity 1
                  filter grayscale(0) drop-shadow(0 2px 1px #999)
                  
              img
                height 75px
                width 75px
                margin-top 25px
                margin-bottom 12px
                opacity .7
                filter grayscale(1)
                transition .4s

              p
                margin 10px 0
                color #555
                text-align center