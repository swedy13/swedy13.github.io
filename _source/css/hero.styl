#hero
  width 100%
  color white
  text-shadow 0 1px 2px #888, 0 1px 12px rgba(0,0,0,.5)

  .title
    text-align center
    position absolute
    top 50%
    width 100%
    transform translateY(-50%)

    h1
      font-family Marck
      line-height .9

    h3
      margin 10px 0
      font-weight 300

  .fa-arrow-down
    position absolute
    left 50%
    transform translateX(-50%)
    cursor pointer


@media (max-width: 1023px)
  #hero
    h1
      font-size 4em
    h3
      font-size 2em
    .fa-arrow-down
      bottom 15px
      font-size 3em

@media (min-width: 1024px)
  #hero
    h1
      font-size 7.5em
    h3
      font-size 3em
    .fa-arrow-down
      bottom 25px
      font-size 4em
      &:hover
        transform scale(1.1) translateX(-45%)
      &:active
        transform scale(1) translateX(-50%)


// ---- Image ---- //
.background
  background-image url('../images/backgrounds/sf-1.jpg')
  background-size cover
  background-position right center


// ---- Parallax ---- //
.parallax
  z-index -1
  position fixed
  top 0
  bottom 0
  left 0
  right 0
