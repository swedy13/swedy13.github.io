// ---- MOBILE ---- //
.hero
  position relative
  height 100vh
  border none

  .content
    z-index 100
    display flex
    align-items center
    justify-content center
    position absolute
    top 0
    height 100vh
    width 100vw
    max-width 100%

    .center
      text-align center

      h1, h3
        margin 0
        color white
        text-shadow 0 1px 5px #777

      h1
        font-family Otto
        font-size 7.5em
        font-weight 400
        line-height .6

      h3
        padding .5em 0 2em
        font-size 1.5em
        font-weight 300

      img.more
        position absolute
        bottom 30px
        left calc(50% - 1.25em)
        height 3.5em
        width 3.5em
        cursor pointer

  // ---- Video ---- //
  .video
    display flex
    align-items center
    justify-content center
    max-height 100%
    overflow hidden
    background-color #000

  .no-video .video video,
  .touch .video video
    display none

  .no-video .video .poster,
  .touch .video .poster
    display block !important



// ---- LARGE MOBILE ---- //
@media screen and (min-width: 668px) and (max-width: 773px)
  .hero
    .content
      .center
        h1
          font-size 8.5em

        h3
          font-size 1.65em


@media screen and (min-width: 774px)
  .hero
    .content
      .center
        h1
          margin-bottom -.15em
          font-size 13em
          font-weight 400

        h3
          margin-top -.15em
          padding-bottom 5em
          font-size 2.5em
          font-weight 300

        img.more
          position absolute
          bottom 3.5em
          height 3.5em
          width 3.5em