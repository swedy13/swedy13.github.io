#hero
  position relative
  width 100%
  overflow hidden


// ---- LOGO ---- //
#hero .logo
    text-align center
    position absolute
    top 50%
    left 50%
    width 90%
    text-shadow 0 1px 2px black
    transform translateY(-50%) translateX(-50%)

    h1,
    h3
      width 100%
      color white

    h1
      font-family Marck
      line-height .8
      margin-bottom 15px

    h3
      font-weight 300

@media screen and (max-width: 767px)
  #hero
    h1
      font-size 3.5em

    h3
      font-size 1.5em


@media screen and (min-width: 768px)
  #hero
    h1
      font-size 7.5em

    h3
      font-size 2.5em


// ---- MENU ---- //
.menu-icon
  position absolute
  top 10px
  right 15px
  font-size 1.2em
  text-transform lowercase
  color white
  text-shadow 0 1px 1px #333
  cursor pointer

  .text
    margin-right 5px


// ---- VIDEO ---- //
#hero video
  z-index -1
  position relative
  width 100%
  height 100%
  object-fit cover

// Media queries for browsers that lack object-fit support
@media (min-aspect-ratio: 16/9)
  #hero video
    height 400%
    top -150%

@media (max-aspect-ratio: 16/9)
  #hero video
    width: 400%
    left -150%

// Overriding media queries of object-fit is supported
@supports (object-fit: cover)
  #hero > video
    top 0
    left 0
    width 100%
    height 100%
    object-fit cover