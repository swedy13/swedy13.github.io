.filters
  z-index 1
  display flex
  align-items center
  justify-content center
  position relative
  height 65px
  width 100vw
  max-width 100%
  border-top 1px solid #ccc
  background-color #eee

  .platform, .type, .industry
    min-width 15%
    max-width 30%
    margin 0 10px

    button
      display flex
      align-items center
      justify-content space-between
      width 100%
      padding 8px 12px
      background-color white
      outline none
      border 1px solid #ddd
      border-radius 5px
      font-size 1em

      &:hover
        background-color #ddd

      p
        margin 0

      .arrow-down
        width 0
        height 0
        border-left 6px solid transparent
        border-right 6px solid transparent
        border-top 6px solid #777

    ul
      display none
      position absolute
      min-width calc(15% - 2px)
      max-width calc(30% - 2px)
      padding 0
      margin-top -2px
      background-color white
      border 1px solid #ddd
      box-shadow 0 1px 5px #e5e5e5
      list-style none

      &:focus
        background-color red

      li
        display flex
        align-items center
        padding 12px

        &:hover
          background-color #f5f5f5

        input[type=checkbox]
          height 16px
          width 16px
          margin-right 12px
          outline none

        p
          margin 0
          font-size 1em