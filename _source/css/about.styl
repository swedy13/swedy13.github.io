#about
  display flex
  align-items center
  justify-content center
  flex-wrap wrap
  position relative
  overflow hidden

@media (max-width: 567px)
  #about
    padding 2.5vw 0
@media (min-width: 568px) and (max-width: 767px)
  #about
    padding 2.5vw 0
@media (min-width: 768px)
  #about
    padding 10vw 0 35vw


// ---- Sizing ---- //
#about .text
  display flex
  flex-wrap wrap
  justify-content center
  margin 5px auto

@media (max-width: 567px)
  #about .text
    width 90%
@media (min-width: 568px) and (max-width: 768px)
  #about .text
    width 90%
@media (min-width: 769px)
  #about .text
    width 100%


// ---- Images ---- //
#about img
  height 75%


// ---- Fog ---- //
#about .fog
  z-index -1
  position absolute
  left 0
  background-size cover
  background-position top left