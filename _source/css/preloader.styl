#preloader
  z-index 100
  display flex
  align-items center
  align-content center
  justify-content center
  flex-wrap wrap
  position fixed
  height 100%
  min-height 100vh
  width 100%
  max-width 100vw
  background #222
  overflow-x hidden


// ---- Gallery ---- //
.fade
  animation fade 1s forwards

@keyframes fade {
  0% {
    opacity 0
    transform translateY(50%)
  }
  100% {
    opacity 1
    transform translateY(0)
  }
}

// Gallery Title
h1
  text-align center
  width 100%
  color white

h4
  text-align center
  width 100%
  margin 5px 0 20px
  font-weight 300
  color white

@media (min-width: 737px)
  h1
    font-size 3em
  h4
    font-size 1.5em

// Gallery Grid
.gallery
  display flex
  align-items center
  justify-content center
  width 100%
  margin-top 25px

@media (orientation: landscape)
  .gallery
    flex-wrap nowrap

@media (orientation: portrait) and (max-width: 736px)
  .gallery
    flex-wrap wrap

// Gallery Items
.gallery .item
    height 150px
    width 150px
    margin 5px
    opacity 0
    transition .15s
    cursor pointer

  .image
    border-radius 100%
    background-size cover
    background-position top center
    box-shadow 0 1px 3px #151515

@media (orientation: portrait) and (max-width: 374px)
  .gallery .item
    height 125px
    width 125px

@media (orientation: landscape) and (max-width: 568px)
  .gallery .item
    height 125px
    width 125px

@media (min-width: 737px)
  h1
    font-size 3em
  h4
    font-size 1.5em


// ---- PreLoader Animation ---- //
// Fishbowl
.fishbowl
  display none
  position relative
  height 150px
  width 150px
  border-radius 100%
  background-color #aaa
  overflow hidden

  .wave
    position absolute
    top 150px
    left 0
    height 33px
    width 550px

  .background
    position absolute
    top 180px
    left 0
    width 100%
    height 200px
    background-color #0b95bf

  .play
    display none
    position absolute
    top 50%
    left 50%
    border-top 35px solid transparent
    border-bottom 35px solid transparent
    border-left 35px solid white
    transform translateX(-50%) translateY(-50%)

// Text Wave
.text-wave
  display none
  align-items flex-end
  justify-content center
  height 75px
  width 100%
  color white
  font-size 1.8em

  .letter
    display inline-block
    margin 0 2px
    opacity 0

  .enter
    display none
    margin-bottom 25px