// Watermark
$margin = -100vh + 10em
$lmargin = -100vh + 20em

.watermark
  opacity .25
  color gray
  font-weight 300
  margin-left .5em


@media screen and (orientation: portrait) and (max-height: 773px)
  .watermark
    font-size 3em
    margin-top $margin

@media screen and (min-height: 774px)
  .watermark
    font-size 5em
    margin-top $margin

@media screen and (orientation: landscape) and (max-width: 773px)
  .watermark
    font-size 3em
    margin-top $lmargin

@media screen and (min-width: 774px)
  .watermark
    font-size 5em
    margin-top $margin
