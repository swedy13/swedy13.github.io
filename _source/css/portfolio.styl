@media (orientation: portrait) and (max-width: 666px)
  #portfolio .item
    height 300px
@media (orientation: landscape) and (max-width: 666px)
  #portfolio .item
    height 100vh
@media (min-width: 667px) and (max-width: 899px)
  #portfolio .item
    height 350px
@media (min-width: 900px)
  #portfolio .item
    height 400px


// ---- Front ---- //
#portfolio .item:hover .mask
  background rgba(0,0,0,.5)
#portfolio .item .front
  position relative
  transition .15s

  .mask
    position absolute
    top -1px
    bottom -1px
    left -1px
    right -1px
    transition .15s ease-in-out
    transition-delay .1s

  // Text
  .title,
  .content *
    z-index 1
    text-shadow 0 1px 5px rgba(0,0,0,.25)

  .title
    width 100%
    font-size 2em
    color white

  .content
    display flex
    flex-wrap wrap
    justify-content center
    margin-bottom 25%

  .content *
    font-family inherit
    font-size 1em
    font-weight 400
    color white

  .content quote
    text-align center
    width 100%
    margin-top 5px
    font-style italic
    font-weight 300

  // Buttons
  .buttons
    position absolute
    display flex
    bottom 25px
    left 50%
    transform translateX(-50%)

    button, .button
      margin 0 2px
      padding 8px 24px
      border 2px solid white
      text-decoration none
      transition .15s

      &:hover
        background white
        color darkslategray
        text-shadow 0 1px 0 darkslategray


// ---- Back ---- //
#portfolio .item .back
  z-index -1
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  background #222
  box-shadow inset 0 0 20px 5px rgba(0,0,0,.5)

  .logo
    margin auto
    filter drop-shadow(0 1px 5px #151515)

#portfolio
  .sage .logo
    height 75%
    width 75%
  .smartprofyl .logo
    height 100%
    width 100%
  .atsc .logo
    height 80%
    width 80%
  .prodigy .logo
    height 75%
    width 75%
  .movietv .logo
    height 100%
    width 100%
  .pairable .logo
    height 100%
    width 100%


