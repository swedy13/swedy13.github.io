// ---- Contact ---- //
#connect
  z-index 1
  display flex
  align-items center
  align-content center
  justify-content center
  flex-wrap wrap
  position relative
  padding 50px 0px
  background-size cover
  background-position top center

  &:after
    content ''
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background rgba(255,255,255,.1)


// ---- Fonts ---- //
#connect
  .title
    width 100%
    margin-bottom 25px
    text-align center
  h3,
  span
    color white
  h3
    font-weight bold
    font-variant small-caps
    text-shadow 0 1px 3px rgba(0,0,0,.5)

@media (orientation: landscape) and (max-height: 319px), (orientation: portrait) and (max-width: 567px)
  #connect
    h3
      font-size 1.8em
    span
      font-size 1.25em
@media (orientation: landscape) and (min-height: 320px), (orientation: portrait) and (min-width: 568px)
  #connect
    h3
      font-size 3em
    span
      font-size 2em


// ---- Social Button ---- //
#connect .social
  div
    z-index 1
    display flex
    align-items center
    justify-content center
    flex-grow 0
    position relative
    width 90%
    cursor pointer

    &:before,
    &:after
      content ''
      z-index 1
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      transition .18s ease-in-out
      transition-delay .05s
    &:before
      background rgba(255,255,255,.2)
      box-shadow 0 1px 7px 2px rgba(0,0,0,.25)
    &:after
      right 100%
      background rgba(0,0,0,.2)
      box-shadow inset 0 1px 7px 2px rgba(0,0,0,.25)

    &:hover::before
      left 100%
    &:hover::after
      right 0%


// ---- Content ---- //
@media (orientation: landscape) and (max-height: 319px), (orientation: portrait) and (max-width: 567px)
  .social div
    margin 10px auto
    img
      height 35px
      padding 15px
  &.gmail
    flex-wrap wrap
    img
      padding 15px 0 5px 0 !important
    span
      text-align center
      width 100%
      padding 5px 0 15px

@media (orientation: landscape) and (min-height: 320px), (orientation: portrait) and (min-width: 568px)
  .social div
    margin 25px auto
    img
      height 50px
      padding 15px 50px
  &.gmail
    flex-wrap nowrap
    img
      padding 15px 5px 15px 50px !important
    span
      padding 15px 50px 15px 5px


.social div
  a
    position absolute
    top 0
    bottom 0
    left 0
    right 0

  &:hover img
    filter drop-shadow(0 1px 3px rgba(0,0,0,.5))

  > *
    z-index 2
    position relative
    opacity .75
    transition .25s ease-in-out
    cursor pointer

  &:hover *
    opacity 1

  &.gmail
    display flex
    align-items center
    align-content center
    justify-content center
    &:hover span
      text-shadow 0 2px 7px rgba(0,0,0,.75)