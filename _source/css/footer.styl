footer
  display flex
  align-items center
  flex-wrap wrap
  height 75px
  margin auto

  .links
    color #777
    font-size 1em

  .social
    display flex
    align-items center
    justify-content center

    a
      text-decoration none

      &:hover
        .contact-caption
          display block

      .link
        display flex
        align-items center
        justify-content center
        margin 0 5px

        img
          height 30px
          opacity 1
          transition .1s

          &:hover
            transform scale(1.1)

        &.gmail
          img
            filter drop-shadow(0 0 1px #555)

        .contact-caption
          display none


@media screen and (max-width: 767px)
  footer
    justify-content center
    width 80%
    padding 15px 0


@media screen and (min-width: 768px)
  footer
    justify-content space-between
    width 98%



footer
  form.contact-form
    z-index 100
    text-align center
    position fixed
    top 0
    bottom 0
    left 0
    right 0
    padding 15% 15%
    background-color white

    .title
      height 50px
      font-size 1.5em

    .options
      display flex
      justify-content center
      flex-wrap wrap
      width calc(100% - 70px)
      margin 0 auto 50px
      padding 25px
      background-color #f8f8f8

      > span
        display flex
        align-items center
        margin 12px 0
        padding 12px 25px
        border-radius 2px

        &:hover
          background-color white
          box-shadow 0 0 2px #ccc, 0 2px 5px #e5e5e5

        > input
          height 17px
          width 17px
          margin-right 8px

        > p
          margin 0

    > input,
    > textarea
      padding 8px 12px
      border 2px solid #ddd
      border-radius 2px
      font-size 1.1em
      line-height 1.5em

    > input
      display inline-block
      width calc(50% - 48px)
      min-width 150px
      margin 25px 10px

    > textarea
      width calc(100% - 48px)
      font-family inherit

    > input[type="submit"]
      width 25%
      background-color royalblue
      border none
      font-size 1.2em
      color white

      &:hover
        background-color #355ccf
        transition .15s

    .close
      position absolute
      height 35px
      width 35px
      top 25px
      right 25px
      overflow hidden

      &:hover
        &::before, &::after
          background-color blue

      &::before, &::after
        content ''
        position absolute
        height 4px
        width 100%
        top 50%
        left 0
        margin-top -2px
        background black

      &::before
        transform rotate(45deg)

      &::after
        transform rotate(-45deg)


