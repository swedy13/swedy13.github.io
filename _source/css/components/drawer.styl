// ---- Shelf Position ---- //
.shelf:not(.top),
.shelf:not(.bottom)
  align-items center

.shelf.top
  align-items flex-start

.shelf.bottom
  align-items flex-end

.shelf
  padding 8px

  &.tight
    padding 0px