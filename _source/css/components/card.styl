.card
  display flex
  align-items center
  justify-content center
  position relative
  height 35vh
  width calc(100% - 10px)
  padding 10px
  background-size cover
  background-repeat no-repeat


// ---- CARD CONTENT ---- //
.card
  > .front,
  > .back
    display flex
    align-items center
    justify-content center
    position absolute
    top 0
    bottom 0
    left 0
    right 0

// ---- Front Side ---- //
.card > .front
  .logo
    max-height 150px
    max-width 350px
    margin-left auto
    margin-right auto
    filter drop-shadow(0 1px 3px #333)
    opacity 1

// ---- Back Side ---- //
.card > .back
  flex-wrap wrap
  align-content center
  text-align center
  padding 15px
  user-select none
  cursor default

  .title,
  .content
    width 100%
    opacity 0

  .title
    margin-bottom 8px
    font-size 1.5em
    font-weight bold
    color white

  .content
    quote
      font-size 1.05em
      font-weight 300
      font-style italic
      color white

    p
      margin-top 24px
      margin-bottom 24px
      font-size 1.1em
      color white

    button
      margin 2px
      padding 10px 20px
      background-color transparent
      border 2px solid white
      border-radius 2px
      font-size 1em
      color white

      &:hover
        background-color rgba(0,0,0,.1)


// ---- Effects ---- //
.card > .back
  z-index 1
  position absolute
  top 50%
  bottom 50%
  left 50%
  right 50%
  opacity 0

.card:hover
  > .front > .logo
      opacity 0

  > .back
    top 0%
    bottom 0%
    left 0%
    right 0%
    opacity 1
    transition .1s ease-in-out

    .title,
    .content
      opacity 1
      transition-delay .11s



// ---- States ---- //
.card > .mask
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  background black
  opacity .5