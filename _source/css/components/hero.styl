#hero-container
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  overflow hidden

  video
    top 0
    left 0
    width 100%
    height 100%
    object-fit cover

// Media queries for browsers that lack object-fit support
@media (min-aspect-ratio: 16/9)
  #hero-container video
    height 400%
    top -150%

@media (max-aspect-ratio: 16/9)
  #hero-container video
    width: 400%
    left -150%

// Overriding media queries of object-fit is supported
@supports (object-fit: cover)
  #hero-container > video
    top 0
    left 0
    width 100%
    height 100%
    object-fit cover