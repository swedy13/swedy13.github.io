@font-face
  font-family Marck
  font-style normal
  src url(../fonts/Marck.ttf)




body
  font-family roboto, sans-serif

p, h1, h2, h3, h4
  margin 0
  padding 0
  color #242424
  cursor default

h1, h2, h3, h4
  margin-top .5em
  margin-bottom .5em

p
  margin-bottom .75em
  &:last-child
    margin 0

h1
  font-size 1.75em
  font-weight 500
  font-variant small-caps

h2
  font-size 1.5em
  font-weight 500

h3
  font-size 1.25em
  font-weight bold
  text-transform uppercase

h4
  font-size 1em
  font-weight bold

a
  color #242424
  text-decoration none

  &:visited
    color #242424


