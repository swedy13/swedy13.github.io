.menu
  display flex
  list-style none



// *********************** //
// ---- GLOBAL STYLES ---- //
// *********************** //
// ---- Menu Position ---- //
.menu.center
  &:not(.top),
  &:not(.bottom),
  &:not(.left),
  &:not(.right)
    align-items center
    justify-content center
    text-align center

.menu.center
  &.top,
  &.bottom
    justify-content center
    text-align center

.menu.top
  align-items flex-start

.menu.bottom
  align-items flex-end

.menu.center
  &.left,
  &.right
    align-items center

.menu.left
  justify-content flex-start
  text-align left

.menu.left
  justify-content flex-end
  text-align right


// ---- Item Colors ---- //
.item.dark
  color #333

.item.gray
  color #777


// ---- Item Styles ---- //
.item
  cursor pointer

  &.disabled
    cursor default

.item.caps
  font-variant small-caps


// ---- Item Sizes ---- //
.item.large
  font-size 1.2em


// ---- Item Weights ---- //
.item.thick
  font-weight 500


// ---- Item Effects ---- //
.item.expand
  &:hover,
  &.active
    transform scale(1.25)
    transition .15s

.item.highlight
  &:hover
    color #eee

.item.darklight
  &:hover
    color #333




// ************************** //
// ---- MENU CONTROLLERS ---- //
// ************************** //
.menu.bullet
  display flex
  align-items center
  justify-content center
  height 60px
  width 50px
  border-radius 100%

  &:after
    content ''
    height 8px
    width 8px
    border-radius 100%

  &.light
    &:after
      background-color white
      box-shadow 0 -25px 0 2px white, 0 0 0 2px white, 0 25px 0 2px white

  &.dark
    &:after
      background-color #333
      box-shadow 0 -25px 0 2px #333, 0 0 0 2px #333, 0 25px 0 2px #333




// ************************** //
// ---- HORIZONTAL MENUS ---- //
// ************************** //
.menu:not(.vertical)
  flex-wrap nowrap

// ----- Menu Size ---- //
// ----- Horizontal Spacing ---- //
.menu:not(.vertical)
  &.menu.tight
    align-content center

  &.menu.comfortable
    align-content space-around

  &.menu.spacious
    align-content space-between



// ************************ //
// ---- VERTICAL MENUS ---- //
// ************************ //
.menu.vertical
  flex-wrap wrap

@media screen and (orientation: landscape) and (max-width: 767px)
  .menu.vertical
    &.rotate
      flex-wrap nowrap

.menu.vertical > *
  &:not(.bullet)
    width 100%

// ---- Menu Size ---- //
.menu.vertical
  &.fluid
    width 100%

// ---- Vertical Spacing ---- //
.menu.vertical
  &.tight
    > .item
      margin 0

  &.comfortable
    > .item
      margin 8px 0

  &.spacious
    > .item
      margin 15px 0