.company
  overflow hidden
  background-color cadetblue
  width 100%

.slider
  display flex
  align-items center
  justify-content center
  height 100vh
  width 100%

  .iterator
    height 50px
    margin 30px
    border-radius 100%
    font-size 3em
    color white
    cursor pointer

    &.zoom
      display none

  .slide
    display none
    height 78vh
    width 100%

    &.visible
      display block

    &.zoom
      z-index 1
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      height 100%
      width 100%
      background-color rgba(0,0,0,.8)
      transition background-color .15s

      .company-hero
        height 80vh
        margin-top 5vh

      .exit-view
        display block
        position absolute
        top 1vh
        right 1vw
        font-size 3em
        color white
        cursor pointer

    .hero
      height 69vh
      background-size contain
      background-position center
      background-repeat no-repeat
      border-radius 3px
      filter drop-shadow(0 3px 7px #333)

    .exit-view
      display none

    .content
      z-index 100
      display none
      justify-content space-between
      position absolute
      bottom 0
      left 0
      right 0
      height 10vh
      padding 12px
      background-color rgba(0,0,0,.7)
      color #ccc

      .left
        .title
          font-size 1.5em
          font-weight 300
          margin-bottom 15px

        .description
          font-size 1em

      .right
        .slider-position
          display flex
          flex-direction row-reverse
          margin-bottom 15px
          margin-right 10px
          font-size 1.5em
          font-weight 300

        .tools
          display flex
          align-items center

          p
            display none

          img
            opacity .7
            height 25px
            width 25px
            margin 0 5px
            filter grayscale(1) brightness(1.5)
            transition .25s

            &:hover
              height 35px
              width 35px
              margin -5px 0
              opacity 1
              filter grayscale(0) brightness(1)